
<div class = "d-flex justify-content-center">
  <div class="container">
    <h1>bluejay</h1>
    <h4>Book your jazz band</h4>

<!-- Jazz type search bar -->

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>



<!-- Date search -->

    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker1').datetimepicker();
                });
            </script>
        </div>
    </div>

  </div>

  <!-- Band list -->


  <div class = "d-flex justify-content-around">
    <div class="card">
      <% @bands.each do |band| %>
        <strong><%= band.name %></strong>
        <%= band.description %>
        <%= band.price %>
        <%=link_to "More", band_path(band), class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>

  <!-- Booking list -->

  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Band name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
      <%=link_to "Edit", edit_booking_path(booking), class: "btn btn-primary" %>
      <%=link_to band_path(band), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-delete" do%>
         <i class="far fa-trash-alt"></i>
      <%end%>
    </div>
  </div>


</div>
