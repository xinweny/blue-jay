<div class="banner d-flex align-items-center justify-content-around">
  <div class="banner-content">
    <h1>bluejay</h1>
    <h4 style= "color: white">Jazz it up a little</h4>
    <%= form_tag bands_path, method: :get do %>
      <div class="d-flex mt-4">
        <%= text_field_tag :query, params[:query], placeholder: "Search by bands and/or jazz type", class: "form-control" %>
        <%= submit_tag "Search", class: "btn btn-primary search-button" %>
      </div>
    <% end %>
  </div>
</div>
