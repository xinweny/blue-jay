<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'logo.png' %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% unless params[:controller] == 'pages' && params[:action] == 'home' %>
      <%= form_tag bands_path, method: :get do %>
        <div class="d-flex">
          <%= text_field_tag :query, params[:query], placeholder: "Search by bands and/or jazz type", class: "form-control" %>
          <%= submit_tag "Search", class: "btn btn-primary search-button mr-4" %>
        </div>
      <% end %>
    <% end %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active" style="margin-right: 20px; margin-top: 5px;">
        <%= link_to 'View all bands', bands_path, class: "nav-link-bluejay" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= cl_image_tag user_avatar(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My bands", my_bands_path, class: "dropdown-item" %>
            <%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to 'Create a band', new_band_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link-bluejay active" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
