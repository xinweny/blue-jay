<div class="band-index-background">
  <div class="band-cards d-flex flex-wrap justify-content-around pt-5">
    <% @bands.each do |band| %>
      <div class="card-trip mb-5">
        <%= cl_image_tag band_image(band) %>
        <div class="card-trip-infos">
          <h5 class="card-title"><%= link_to band.name, band_path(band) %></h5>
          <div class="d-flex align-items-center justify-content-between">
            <p><em><%= band.jazz_type %></em></p>
            <h2 class= "card-trip-pricing">$<%= band.price %>/hr</h2>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
























