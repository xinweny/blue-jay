<div class="card-trip my-2">
  <%= cl_image_tag band_image(band) %>
  <div class="card-trip-infos">
    <h5 class="card-title"><%= link_to band.name, band_path(band) %></h5>
    <div class="d-flex align-items-center justify-content-between">
      <p><em><%= band.jazz_type %></em></p>
      <h2 class= "card-trip-pricing">$<%= band.price %>/hr</h2>
    </div>
  </div>
  <% if policy(band).destroy? %>
    <%= link_to band_path(band), method: :delete, data: { confirm: 'Delete this band?' } do %>
      <i class="fas fa-times"></i>
    <% end %>
  <% end %>
</div>
