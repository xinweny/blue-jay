<%= simple_form_for @band do |f| %>
  <%= f.input :name %>
  <%= f.input :description, hint: "What's your jazz?" %>
  <%= f.input :price, label: 'Price ($/hour)' %>
  <%= f.input :audio, hint: 'Upload an audio sample!' %>
  <%= f.input :video_url, label: 'Video URL', hint: 'Link a video sample!' %>
  <%= f.input :image %>
  <%= f.input :image_cache, as: :hidden %>
  <% if @band.id.nil? %>
    <%= f.submit 'Create', class: "btn btn-primary" %>
  <% else %>
    <%= f.submit 'Update', class: "btn btn-primary" %>
  <% end %>
<% end %>

