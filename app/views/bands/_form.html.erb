<%= simple_form_for @band do |f| %>
  <%= f.input :name %>
  <%= f.input :description, hint: "What's your jazz?" %>
  <%= f.input :price, label: 'Price ($/hour)' %>
  <%= f.input :samples, hint: 'Provide some links for sound and/or video samples' %>
  <%= f.input :image %>
  <%= f.input :image_cache, as: :hidden %>
  <% if @band.id.nil? %>
    <%= f.submit 'Create', class: "btn btn-primary" %>
  <% else %>
    <%= f.submit 'Update', class: "btn btn-primary" %>
  <% end %>
<% end %>

