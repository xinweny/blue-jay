<%= simple_form_for @band do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price, label: 'Price per hour' %>
  <%= f.input :image %>
  <%= f.input :image_cache, as: :hidden %>
  <% if @band.id.nil? %>
    <%= f.submit 'Create' %>
  <% else %>
    <%= f.submit 'Update' %>
  <% end %>
<% end %>

