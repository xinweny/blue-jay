<div>
  <div>
    <h1><%= @band.name%></h1>

    <h4>Jazz type</h4>

    <p><%= @band.jazz_type %></p>

    <%= cl_image_tag band_image(@band), class: "show-image" %>

    <h4 style="margin-top: 30px">Price</h4>
    <p>$<%=@band.price%> per hour</p>

    <h4>Description</h4>
    <p><%= @band.description%></p>

    <h4>Music samples</h4>
    <% unless @band.video_url == '' %>
      <iframe width="100%" height="315"
        src=<%= @band.youtube_url %>>
      </iframe>
    <% end %>
    <% unless @band.audio.url.nil? %>
      <audio controls="true" src="<%= cloudinary_url @band.audio.url, resource_type: "video" %>"></audio>
    <% end %>

    <% unless @band.tag_list.empty? %>
      <p><b>Tags: </b><% @band.tag_list.each do |tag| %><%= link_to tag, tagged_path(tag: tag) %><% end %></p>
    <% end %>

    <h4>Reviews</h4>
    <% if @band.reviews.empty? %>
      <p>No reviews yet.</p>
    <% else %>
      <div id="band-reviews">
        <% @band.reviews.each do |review| %>
          <div class="band-review">
            <div class="rating">
              <% review.rating.times do %>
                 <i class="fas fa-star"></i>
               <% end %>
             </div>
            <p><em>"<%= review.content %>"</em> - <%= review.user.full_name %></p>
          </div>
        <% end %>
      </div>
    <% end %>

  <% if policy(@review).new? %>
    <%= render 'reviews/form', band: @band, review: @review %>
  <% end %>

  <%=link_to "Back", bands_path, class: "btn btn-primary"%>

  <% if policy(@band).edit? %>
    <%= link_to 'Edit', edit_band_path(@band), class: "btn btn-primary" %>
  <% end %>

  <% if policy(@band).destroy? %>
    <%= link_to 'Delete', band_path(@band), method: :delete, data: { confirm: 'Delete this band?' }, class: "btn btn-primary" %>
  <% end %>

  <% unless @band.user == current_user %>
    <h2>Book this band</h2>
    <%= render 'bookings/form', band: @band, booking: @booking %>
  <% end %>
  </div>
</div>
