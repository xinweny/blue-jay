<div class="container" style="background-color: white; width: 500px; margin-top: 100px; padding: 30px">

<h1> Edit a Booking </h1>

 <%= simple_form_for @booking do |f| %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :event_start %>
  <%= f.input :event_end %>
  <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>

<%=link_to "Back", root_path, class: "btn btn-primary"%>

</div>
